{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist",
        "types": ["node", "jest"],
        "baseUrl": "./",
        "paths": {
          "@electron/*": ["../electron/*"],
          "@src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module" : "CommonJS",
        "target": "ESNext",
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.test.ts", "jest.config.ts"]
  }